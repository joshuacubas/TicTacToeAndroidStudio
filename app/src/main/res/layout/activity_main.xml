<?xml version="1.0" encoding="utf-8"?>

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:paddingTop="30dp"
    >

    <TableRow >
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_span="1"
            android:background="#3C3C3C"
            android:gravity="center"
            android:paddingLeft="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/chalkboard" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="clip_horizontal"
            android:layout_span="2"
            android:background="#3C3C3C"
            android:fontFamily="@font/bebas_neue"
            android:gravity="left"
            android:lines="2"
            android:maxLines="1"
            android:padding="10dp"
            android:text="3 In A Row Wins!"
            android:textColor="#B7B7B7"
            android:textSize="32sp"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="50"
            app:autoSizeTextType="uniform"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/square1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:contentDescription="button 1"
            android:textSize="30sp"
            android:backgroundTint="@color/title_bar_color"/>
        <Button
            android:id="@+id/square2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/square3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:textSize="30sp"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/square4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/square5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/square6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:textSize="30sp"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/square7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/square8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/square9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:textSize="30sp"/>
    </TableRow>
    <TableRow>

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_gravity="clip_horizontal"
            android:layout_span="3"
            android:fontFamily="@font/autour_one"
            android:gravity="center"
            android:lines="2"
            android:maxLines="2"
            android:padding="10dp"
            android:shadowColor="@color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="1"
            android:text="Player X/s turn"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/newGameButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_span="3"
            android:fontFamily="@font/autour_one"
            android:text="New Game"
            android:textSize="20sp" />

    </TableRow>

</TableLayout>